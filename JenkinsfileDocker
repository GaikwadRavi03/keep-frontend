pipeline { 
    agent any 
    options {
        skipStagesAfterUnstable()
    }
    stages {
        stage('package creation') { 
            steps { 
                sh ''' #!/bin/bash
                rsync -avzP -e 'ssh -i /my-mumbai-key.pem' /var/lib/jenkins/workspace/keep-frontend-pipeline ubuntu@35.154.65.96:/
                echo ===> package creation on frontend server
                '''
            }
        }
        stage('Build') { 
            steps { 
                sh ''' #!/bin/bash
                ssh -i /my-mumbai-key.pem ubuntu@35.154.65.96 'sudo rm -rf /keep-frontend'
                ssh -i /my-mumbai-key.pem ubuntu@35.154.65.96 'sudo mv /keep-frontend-pipeline /keep-frontend'
                ssh -i /my-mumbai-key.pem ubuntu@35.154.65.96 'bash /myCommands/dockerBuildFront.sh'
                echo ===> Build stage
                '''
            }
        }
        stage('Test') { 
            steps {
                sh 'echo test case runs' 
            }
        }
        stage('deploy') { 
            steps {
                sh ''' #!/bin/bash
                #ssh -i /my-mumbai-key.pem ubuntu@35.154.65.96 'bash /myCommands/dockerDeployFront.sh'
                echo ===> deploy stage
                '''
            }
        }
    }
}
